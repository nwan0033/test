{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 300,
  "title": "",
  "projection": {
    "type": "equalEarth"
  },
  "params": [
    {
      "name": "Year_Equals",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2020,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nwan0033/data_vis_II/main/global-data-on-sustainable-energy.csv"
      },
      "transform": [
        {
          "filter": "datum.Year == Year_Equals"
        }
      ],
      "mark": {
        "type": "circle"
      },
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "Primary energy consumption per capita (kWh/person)",
          "type": "quantitative",
          "title": "Energy consumption (kWh/cap)",
          "scale": {
            "domain": [
              0,
              270000
            ]
          }
        },
        "color": {
          "field": "gdp_per_capita",
          "type": "quantitative",
          "title": "GDP per capita",
          "scale": {
            "scheme": "blues"
          }
        },
        "tooltip": [
          {
            "field": "Entity",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Year",
            "type": "nominal"
          },
          {
            "field": "Primary energy consumption per capita (kWh/person)",
            "type": "quantitative",
            "title": "Energy consumption per capita",
            "format": ".2f"
          },
          {
            "field": "gdp_per_capita",
            "type": "quantitative",
            "title": "GDP per capita",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}